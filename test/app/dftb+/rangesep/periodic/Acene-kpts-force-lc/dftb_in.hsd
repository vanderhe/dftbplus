Geometry = GenFormat {
   <<< Acene_rattled.gen
}

Hamiltonian = DFTB {

  SCC = Yes
  MaxSccIterations = 100
  SccTolerance = 1e-12

  Filling = Fermi {
    Temperature [K] = 0.0
  }

  MaxAngularMomentum = {
    C = "p"
    H = "s"
  }

  SlaterKosterFiles = Type2FileNames {
    Prefix = "./"
    Separator = "-"
    Suffix = ".skf"
  }

  Hybrid = LC {
    CoulombMatrix = Truncated {
      CoulombCutoff = 0.581327E+01
      GSummationCutoff = 0.116265E+02
    }
    Screening = NeighbourBased {
      Threshold = 1e-100
    }
  }

  KPointsAndWeights = SupercellFolding {
     1   0   0
     0   1   0
     0   0   7
    0.0 0.0 0.0
  }

}

Analysis {
  CalculateForces = Yes
}

Options {
  WriteResultsTag = No
  WriteAutotestTag = Yes
}

ParserOptions {
  ParserVersion = 13
}

Parallel {
  Groups = 1
  UseOmpThreads = No
}
