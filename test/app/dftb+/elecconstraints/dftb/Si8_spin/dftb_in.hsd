Geometry = GenFormat {
  <<< Si8.gen
}

Hamiltonian = DFTB {

  Charge = -1

  SCC = Yes
  SccTolerance = 1.0e-010

  Filling = Fermi {
    Temperature [K] = 100.0
  }

  MaxAngularMomentum = {
    Si = "p"
  }

  SlaterKosterFiles = {
    Si-Si = "slakos/origin/pbc-0-3/Si-Si.skf"
  }

  KPointsAndWeights = SupercellFolding {
     4   0   0
     0   4   0
     0   0   4
    0.5 0.5 0.5
  }

  SpinPolarisation = {
    Colinear = {
      UnpairedElectrons = 1
      RelaxTotalSpin = No
      InitialSpins = {}
    }
  }

  SpinConstants = {
    ShellResolvedSpin = No
    Si = {-0.0144}
  }

  StateConstraints = {
    Regions {
      Atoms {
        Domain = 8
        Population = 5.0
      }
    }
    Optimiser = FIRE {}
    ConstrTolerance = 1.0e-10
    MaxConstrIterations = 300
  }

}

Options {
  WriteAutotestTag = Yes
}

Analysis {
  CalculateForces = No
}

ParserOptions {
  ParserVersion = 12
}

Parallel {
  UseOmpThreads = Yes
}
