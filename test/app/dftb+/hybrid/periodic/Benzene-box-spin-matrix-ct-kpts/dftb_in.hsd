Geometry = GenFormat {
  <<< "geo.gen"
}

Hamiltonian = DFTB {

  SCC = Yes
  SCCTolerance = 1e-08
  # MaxSCCIterations = 2

  Charge = 2

  MaxAngularMomentum = {
    C = "p"
    H = "s"
  }

  # Mixer = Simple {MixingParameter = 0.75}

  SlaterKosterFiles = Type2FileNames {
    Prefix = "slakos/origin/ob2-1-1/shift/"
    Separator = "-"
    Suffix = ".skf"
  }

  SpinPolarisation = Colinear {
      UnpairedElectrons = 2
      RelaxTotalSpin = Yes
  }

  Filling = Fermi {Temperature [K] = 0.0}

  Hybrid = LC {
    CoulombMatrix = Truncated {}
    # Screening = NeighbourBased {Threshold = 1e-100}
    Screening = MatrixBased {}
  }

  KPointsAndWeights = SupercellFolding {
     3   0   0
     0   2   0
     0   0   2
    0.0 0.0 0.0
  }

  SpinConstants = {
      C = {-0.023} # HOMO Wpp
      H = {-0.072} # HOMO Wss
  }

}

ParserOptions {
    ParserVersion = 14
}

Options {
  WriteAutotestTag = Yes
  WriteResultsTag = Yes
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
